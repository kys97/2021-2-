<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient"
    android:weightSum="4"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/send1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:text="내가 누군지\n모르겠어요"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="#F1E153"/>

                <TextView
                    android:id="@+id/send2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:text="여기가 어딘지\n모르겠어요"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="#F1E153"/>
                <TextView
                    android:id="@+id/send3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:text="집이 기억이 안나요"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="#F1E153"/>

                <TextView
                    android:id="@+id/emergency"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:background="#BA7C7C"
                    android:gravity="center"
                    android:text="위험한 상황이에요"
                    android:textColor="#FF0000"
                    android:textSize="40dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/patient_logout"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:text="로그아웃"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="10dp"/>
            </LinearLayout>
        </ScrollView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fb_patient_protector"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            android:src="@drawable/ic_baseline_people_alt_24"
            app:maxImageSize="50dp"
            app:fabCustomSize="80dp"
            app:elevation="10dp"/>
    </FrameLayout>
</LinearLayout>