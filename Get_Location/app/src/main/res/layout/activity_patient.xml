<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient"
    android:weightSum="4"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/wd"
            android:text="write_data"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:id="@+id/wd1"
            android:text="get_location"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/send1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="내가 누군지 모르겠어요"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="#F1E153"
        />

    <TextView
        android:id="@+id/send2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="여기가 어딘지 모르겠어요"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="#F1E153"
        />
    <TextView
        android:id="@+id/send3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="집이 기억이 안나요"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="#F1E153"
        />
    <TextView
        android:id="@+id/emergency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="위험한 상황이에요"
        android:textSize="30dp"
        android:textColor="#FF0000"
        android:gravity="center"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="#BA7C7C"
        />

</LinearLayout>